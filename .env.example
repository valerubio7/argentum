# Application
APP_NAME="Argentum"
APP_VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG="false"
HOST="0.0.0.0"
PORT="8000"

# Database
DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/argentum"
DB_POOL_SIZE="5"
DB_MAX_OVERFLOW="10"
DB_POOL_TIMEOUT="30"
DB_POOL_RECYCLE="3600"

# JWT
JWT_SECRET_KEY="your-secret-key-change-in-production-use-openssl-rand-hex-32"
JWT_ALGORITHM="HS256"
JWT_ACCESS_TOKEN_EXPIRE_MINUTES="30"

# Security
BCRYPT_ROUNDS="12"

# CORS
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# API
API_PREFIX="/api/v1"
