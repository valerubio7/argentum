# Application
APP_NAME=Argentum
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/argentum_db

# Database Connection Pool
# Pool size: Number of connections to maintain in the pool
DB_POOL_SIZE=5
# Max overflow: Additional connections beyond pool_size when pool is full
DB_MAX_OVERFLOW=10
# Pool timeout: Seconds to wait for connection from pool (default: 30)
DB_POOL_TIMEOUT=30
# Pool recycle: Recycle connections after N seconds (prevents stale connections)
DB_POOL_RECYCLE=3600

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Future Features (not implemented yet)
# REDIS_URL=redis://localhost:6379/0
# SECRET_KEY=your-secret-key-here-change-in-production
# LOG_LEVEL=INFO
